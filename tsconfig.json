{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2019",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@auth/*": ["src/auth/*"],
      "@core/*": ["src/core/*"],
      "@database/*": ["src/database/*"],
      "@routes/*": ["src/routes/*"],
      "@helpers/*": ["src/helpers/*"],
      "@model/*": ["src/database/model/*"],
      "@repository/*": ["src/database/repository/*"]
    }
  },
  "include": ["src/**/*", "src/types"],
  "exclude": [".templates"]
}
